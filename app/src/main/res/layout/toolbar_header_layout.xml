<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_bgnd"
    android:orientation="horizontal"
    app:popupTheme="@style/AppTheme.PopupOverlay">

    <RelativeLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:contentDescription="@string/account_image"
            android:src="@drawable/menu">

        </ImageView>

        <ImageView
            android:id="@+id/img_flogo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/account_image"
            android:src="@drawable/flogo">

        </ImageView>

        <RelativeLayout
            android:id="@+id/rl_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="end">

            <ImageView
                android:id="@+id/img_logout"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_marginTop="@dimen/_20dp"
                android:contentDescription="@string/account_image"
                android:src="@drawable/logout">

            </ImageView>

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_toEndOf="@+id/img_logout"
                android:layout_toRightOf="@+id/img_logout"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="1"
                android:text="@string/logout"
                android:textColor="@color/blue"
                android:textSize="@dimen/_14sp" />
        </RelativeLayout>


    </RelativeLayout>


</androidx.appcompat.widget.Toolbar>