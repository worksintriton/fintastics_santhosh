<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".familyaccount.CreateProfileActivity">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include
            android:id="@+id/include_header"
            layout="@layout/toolbar_header_layout_with_backnavg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerView"
        android:layout_below="@+id/headerView"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_lbl_payment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="@dimen/_5dp"
                android:text="@string/payment_type"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_16sp" />
            <RelativeLayout
                android:id="@+id/rl_paymenttype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_corner_bg_blue"
                android:padding="10dp">

                <Spinner
                    android:id="@+id/spr_payment_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:entries="@array/array_paymentypename" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/spin_arrow"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_lbl_transctype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="@dimen/_5dp"
                android:text="@string/transaction_type"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_16sp" />
            <RelativeLayout
                android:id="@+id/rl_transactiontype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_corner_bg_blue"
                android:padding="10dp">

                <Spinner
                    android:id="@+id/spr_transacation_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/spin_arrow"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>


            <TextView
                android:id="@+id/txt_lbl_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="@dimen/_5dp"
                android:text="@string/description"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_16sp" />

            <RelativeLayout
                android:id="@+id/rl_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_corner_bg_blue"
                android:padding="10dp">

                <Spinner
                    android:id="@+id/spr_desc_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/spin_arrow"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_lbl_dateoftransaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="@dimen/_5dp"
                android:text="@string/date_of_transaction"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_day"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_corner_bg_blue"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="@string/dd"
                    android:lines="1"
                    android:padding="@dimen/_15dp"
                    android:textColor="@color/txt_black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="16sp"
                    tools:ignore="Autofill,LabelFor" />

                <TextView
                    android:id="@+id/txt_month"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_corner_bg_blue"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="@string/mm"
                    android:lines="1"
                    android:padding="@dimen/_15dp"
                    android:textColor="@color/txt_black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="16sp"
                    tools:ignore="Autofill,LabelFor" />

                <TextView
                    android:id="@+id/txt_year"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_corner_bg_blue"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="@string/yyyy"
                    android:lines="1"
                    android:padding="@dimen/_15dp"
                    android:textColor="@color/txt_black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="16sp"
                    tools:ignore="Autofill,LabelFor" />

                <ImageView
                    android:id="@+id/img_calendar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:contentDescription="@string/arrow_image"
                    app:srcCompat="@drawable/calander"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/txt_lbl_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="@dimen/_5dp"
                android:text="@string/amount"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_16sp" />

            <EditText
                android:id="@+id/edt_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/rectangle_corner_bg_blue"
                android:fontFamily="@font/roboto_medium"
                android:hint="Enter Amount"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:lines="1"
                android:padding="@dimen/_15dp"
                android:textColor="@color/txt_black"
                android:textColorHint="@color/hint_color"
                android:textSize="16sp"
                tools:ignore="Autofill,LabelFor" />





        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_20dp"
            android:background="@drawable/rectangle_corner_bg_thicblue"
            android:fontFamily="@font/roboto_medium"
            android:padding="@dimen/_15dp"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sp" />
    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/blue"
        app:indicatorName="LineSpinFadeLoaderIndicator" />

</RelativeLayout>