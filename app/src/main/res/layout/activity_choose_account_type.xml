<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ChooseAccountTypeActivity">

    <RelativeLayout
        android:id="@+id/ll_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/solid_opaque_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/txt_lbl_creatacc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:padding="@dimen/_5dp"
                android:text="@string/create_account"
                android:textColor="@color/white"
                android:textIsSelectable="false"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_lbl_acctyp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/select_your_account_type"
                android:textColor="@color/blue"
                android:textSize="@dimen/_14sp" />

            <LinearLayout
                android:id="@+id/ll_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:background="@drawable/ellipse_bgm"
                android:orientation="horizontal"
                android:padding="@dimen/_15dp"
                android:onClick="personal">

                <ImageView
                    android:id="@+id/img_lbl_personal"
                    android:layout_width="@dimen/_36dp"
                    android:layout_height="@dimen/_36dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/account_image"
                    android:src="@drawable/icn_personal">

                </ImageView>

                <TextView
                    android:id="@+id/txt_lbl_personal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="@string/personal_account"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:background="@drawable/ellipse_bgm"
                android:orientation="horizontal"
                android:padding="@dimen/_15dp"
                android:onClick="family">

                <ImageView
                    android:id="@+id/img_lbl_family"
                    android:layout_width="@dimen/_36dp"
                    android:layout_height="@dimen/_36dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/account_image"
                    android:src="@drawable/icn_family">

                </ImageView>

                <TextView
                    android:id="@+id/txt_lbl_family"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="@string/family_account"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <ImageView
        android:id="@+id/img_lbl_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_acccount"
        app:layout_constraintBottom_toTopOf="@id/ll_root"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ll_root"
        android:contentDescription="@string/account_image">

    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>